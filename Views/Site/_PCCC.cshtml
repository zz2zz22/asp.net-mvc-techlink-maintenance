@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#712cf9">
</head>
<body class="bg-light">
    <div class="container py-4">
        <main>
            <div>
                <form class="needs-validation my-3" novalidate>
                    <div>
                        <div class=" order-md-last">
                            <h4 class="d-flex justify-content-between align-items-center">
                                <span class="text-primary">Nhập thông tin bảo trì / 输入维护信息</span>
                            </h4>
                        </div>
                        <div class="form-check">
                            <input id="start-maintenance" name="maintenanceType" type="radio" class="form-check-input" checked required>
                            <label class="form-check-label" for="start-maintenance">Tiến hành bảo trì hoặc thay thế</label>
                            <p>进行维修或更换</p>
                        </div>
                        <div class="form-check my-3">
                            <input id="end-maintenance" name="maintenanceType" type="radio" class="form-check-input" required>
                            <label class="form-check-label" for="end-maintenance">Hoàn tất bảo trì hoặc thay thế</label>
                            <p>完成维护或更换</p>
                        </div>

                    </div>
                    <hr class="my-4">
                    <div>
                        <div class="col-12">
                            <label for="remark" class="form-label">Ghi chú bảo trì<span class="text-muted"> (Nếu có)</span></label>
                            <p>维护说明<span class="text-muted">（如果有）</span></p>
                            <input type="text" class="form-control" id="remark">
                        </div>
                    </div>
                    <hr class="my-4">
                    <button class="w-100 btn btn-primary btn-lg" type="submit" onclick="SaveData" id="start-scan" formaction="@Url.Action("PCCCScan", "Site")" >Quét mã thiết bị / 扫描设备代码</button>
                    <script>
                        document.getElementById('start-scan').onclick = function () { SaveData() }
                        function SaveData() {
                            sessionStorage.clear();
                            if (document.getElementById('start-maintenance').checked) {
                                sessionStorage.setItem("PCCCtype", "1");
                            }
                            if (document.getElementById('end-maintenance').checked) {
                                sessionStorage.setItem("PCCCtype", "2");
                            }
                            var x = document.getElementById("remark").value;
                            sessionStorage.setItem("PCCCremark", x);
                        }
                        
                    </script>
                </form>
            </div>
        </main>
    </div>
</body>
</html>
